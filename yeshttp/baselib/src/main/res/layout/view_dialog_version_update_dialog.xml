<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@xml/ellipse_gray_10">
    <TextView
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#302d2d"
        android:textSize="16sp"
        android:gravity="center"
        android:text="有新版本，是否选择更新？"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/content_dialog_version_update_dialog"
        android:textColor="#585656"
        android:textSize="12sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:text="新版本内容："
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/yes_dialog_version_update_dialog"
            android:background="@drawable/red_or_reddeep_selector"
            android:textColor="#ffffff"
            android:text="确定"
            android:layout_width="70dp"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/no_dialog_version_update_dialog"
            android:background="@drawable/red_or_reddeep_selector"
            android:textColor="#ffffff"
            android:text="取消"
            android:layout_marginLeft="40dp"
            android:layout_width="70dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>

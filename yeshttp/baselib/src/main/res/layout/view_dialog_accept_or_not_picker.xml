<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@xml/ellipse_gray_10">

    <TextView
        android:textColor="@color/base_black"
        android:id="@+id/title_dialog_accept_or_not_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="确认拒单"
        android:textSize="14sp" />

    <TextView
        android:textColor="@color/base_black"
        android:id="@+id/content_dialog_accept_or_not_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:text="拒绝该订单之后，系统将不会再派订单给你"
        android:gravity="center"/>

    <View
        style="@style/baselib_line"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/yes_dialog_accept_or_not_picker"
            style="@style/small_bt_gray"
            android:text="确定" />

        <Button
            android:id="@+id/no_dialog_accept_or_not_picker"
            style="@style/small_bt_gray"
            android:layout_marginLeft="40dp"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/base_arrow_left"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/base_gray_3"
            android:textSize="16sp" />

        <ImageView
            android:gravity="center"
            android:text="确定"
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/base_delete_top_press" />

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/base_orange" />-->
    </RelativeLayout>

    <View
        style="@style/baselib_line"
        android:layout_height="1px"/>

    <ListView
        android:id="@+id/select_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:divider="@color/base_gray_2"
        android:dividerHeight="1px"
        android:scrollbars="none" />

    <Button
        android:id="@+id/bt_"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/orange_or_orangedeep_selector"
        android:gravity="center"
        android:text="确定" />
</LinearLayout>